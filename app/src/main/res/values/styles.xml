<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="LineChart">
        <item name="YUnit">@string/accuracy</item>
        <item name="XUnit">@string/date</item>
        <item name="outLineColor">@color/outLineColor</item>
        <item name="outLineTextColor">@color/outLineTextColor</item>
    </style>

    <style name="Playing">
        <item name="lineColor">?android:attr/textColorPrimary</item>
        <item name="pointColor">@color/sr_chip_grey</item>
        <item name="pointActiveColor">?attr/colorPrimary</item>
    </style>

    <style name="LatticePad">
        <item name="lattice_pointColor">?attr/colorPrimaryDark</item>
        <item name="strokeColor">@color/sr_chip_grey</item>
        <item name="xPointCount">30</item>
        <item name="yPointCount">27</item>
        <item name="displayMode">false</item>
    </style>

    <style name="Widget.SR.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.SR.Toolbar</item>
    </style>

    <style name="Widget.SR.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.SR.Button</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.SR.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.SR.Button</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.SR.Button.TextButtonBackdrop" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.SR.Button</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="rippleColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Widget.SR.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">@color/sr_white</item>
    </style>

    <style name="Widget.SR.ChoiceChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
    </style>

    <style name="Widget.SR.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>

    <style name="Widget.SR.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
    </style>

    <style name="TextAppearance.SR.Toolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SR.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
